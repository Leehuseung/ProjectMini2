<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mlec.board.dao.ReviewMapper">
	<resultMap id="ReviewMap" type="review">
		<result column="board_no" property="no" />
		<result column="review_category" property="reviewCategory" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="rating_category" property="ratingCategory" />
		<result column="like_cnt" property="likeCnt" />
		<result column="view_cnt" property="viewCnt" />
		<result column="write_date" property="writeDate" />
	</resultMap>

	<!-- 리뷰 등록하기 -->
	<insert id="insertReview" parameterType="review">
	insert into tb_review(
		board_no, review_category, title, content, rating_category
	)values (
		s_review_no.nextval, #{reviewCategory},#{title},#{content},#{ratingCategory}
	)
	</insert>
</mapper>
























