<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.org.jejutour.repository.dao.TouristMapper">
	<resultMap id="touristBoardMap" type="board">
		<result column="member_no" property="memberNo" />
		<result column="board_no" property="boardNo" />
		<result column="title" property="title" />
		<result column="nomination" property="nomination" />
		<result column="tag" property="tag" />
		<result column="simple_introduce" property="simpleIntroduce" />
		<result column="like_cnt" property="likeCnt" />
		<result column="view_cnt" property="viewCnt" />
		<result column="review_cnt" property="reviewCnt" />
		<result column="write_date" property="writeDate" />
		<result column="introduce" property="introduce" />
		<result column="fee" property="fee" />
		<result column="address" property="address" />
		<result column="purpose" property="purpose" />
		<result column="hours" property="hours" />
		<result column="contact" property="contact" />
		<result column="update_date" property="updateDate" />
		<result column="content_title" property="contentTitle" />
		<result column="content" property="content" />
		<result column="like_status" property="likeStatus" />
	</resultMap>

	<!-- 메인파트기능 시작 =============================-->
	
	<!--  전체 게시물 조회 9칸씩  제일늦게 작성된글이 제일 위에 올라오도록 처리함 -->
	<select id="selectTouristBoard" parameterType="page" resultMap="touristBoardMap">
		select *
 		  from (select rownum rnum, a.*
         		  from (select *
                 		  from tb_board
                 		 order by no desc) a
        		)
		 where rnum between #{begin} and #{end}
	</select>
	
	<!-- 전체 게시글 숫자 -->
	<select id="selectTouristBoardCount" resultType="int">
		select count(*)
		  from tb_tourist_board
	</select>
	
	<!-- 글번호 조회 -->
	<select id="selectTouristBoardByNo" resultMap="touristBoardMap" parameterType="int">
	select * 
	  from tb_tourist_board
	 where board_no = #{boardNo} 	
	</select>
	
	
	<!-- 글등록 -->
	<insert id="writeTouristBoard" parameterType="board">
		<selectKey keyProperty="boardNo" resultType="int"
				   order="BEFORE">
			select tb_tourist_board_no.nextval
			  from dual
		</selectKey>
		insert into tb_tourist_board( 
		    board_no, title, nomination, tag, simple_introduce, introduce,
		    fee, address, purpose, hours, contact, content_title, content 
		) values (
		    #{boardNo}, #{title}, #{nomination}, #{tag}, #{simpleIntroduce}, #{introduce},
		    #{fee}, #{address}, #{purpose}, #{hours}, #{contact}, #{contentTitle}, #{content}
		)	
	</insert>
	

	<!-- 글수정 -->
	<update id="updateTouristBoard" parameterType="board">
	update tb_tourist_board 
	   set title = #{title}, 
	   	   nomination = #{writer},
	       tag = #{tag},
	       simple_introduce = #{simpleIntroduce},
	       introduce = #{introduce},
	       fee = #{fee},
	       address = #{address},
	       purpose = #{purpose},
	       hours = #{hours},
	       contact = #{contact},
	       content_title = #{contentTitle},
	       content = #{content}
	 where board_no = #{boardNo}
	</update>
	
	<!-- 글삭제 -->
	<delete id="deleteTouristBoard" parameterType="int">
	delete 
	  from tb_tourist_board 
	 where no = #{no}
	</delete>
	
	<!-- 조회수증가 -->
	<update id="updateTouristViewCnt" parameterType="int">
	update tb_tourist_board
	   set view_cnt = view_cnt + 1
	 where borad_no = #{boardNo}
	</update>
	
	
	
	
	
	
	
	
	
	
	<!-- 댓글 파트 시작 ============================= -->	
	<resultMap id="commentMap" type="comment">
		<result column="board_no" property="boardNo" />
		<result column="member_no" property="memberNo" />
		<result column="comment_no" property="commentNo" />
		<result column="name" property="name" />
		<result column="content" property="content" />
		<result column="write_date" property="writeDate" />
		<result column="rating" property="rating" />
	</resultMap>
	
	<!-- 댓글 목록 -->
	<select id="selectCommentsByNo" parameterType="int" resultMap="commentMap">
	    select *
	      from tb_comment
	     where no = #{no}
	     order by comment_no 
	</select>	
	
	<!--  댓글 등록  -->
	<insert id="insertComment" parameterType="comment">
		insert into tb_comment(
			comment_no, no, writer, content
		) values (
			s_comment_no.nextVal, #{no}, #{writer}, #{content}
		)
	</insert>
	
	<!--  댓글 삭제  -->
	<delete id="deleteComment" parameterType="int">
	    delete 
	      from tb_comment
	     where comment_no = #{commentNo}
	</delete>
	
	<!--  댓글 수정  -->
	<update id="updateComment" parameterType="comment">
	    update tb_comment
	       set content = #{content}
	     where comment_no = #{commentNo}
	</update> 	
	
	<!-- 첨부파일 등록 ============================= -->
	<resultMap id="fileMap" type="file">
		<result column="no" property="no" />
		<result column="file_no" property="fileNo" />
		<result column="org_name" property="orgName" />
		<result column="system_name" property="systemName" />
		<result column="file_path" property="filePath" />
		<result column="file_size" property="fileSize" />
	</resultMap>
	
	
	<!-- 파일 등록 =================================-->
	<resultMap id="fileMap" type="file">
		<result column="board_no" property="boardNo" />
		<result column="file_no" property="fileNo" />
		<result column="name" property="name" />
		<result column="path" property="path" />
	</resultMap>
	
	<insert id="writeBoardFile" parameterType="file">
		
		insert into tb_board_file ( 
		    file_no, no, org_name, system_name, file_path, file_size
		) values (
		    s_board_file_no.nextval, #{no}, #{orgName}, #{systemName}, #{filePath}, #{fileSize}
		)	
	</insert>
	
	<!-- 파일 목록 -->
	<select id="selectFilesByNo" resultMap="fileMap" parameterType="int">
		select *
		  from tb_board_file
		 where no = #{no}
	</select>
	
	
</mapper>
























